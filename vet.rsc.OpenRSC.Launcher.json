{
    "id": "vet.rsc.OpenRSC.Launcher",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "21.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "openrsc",
    "separate-locales": false,
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.openjdk17"
    ],
    "finish-args": [
        "--share=network",
        "--socket=x11",
        "--device=dri",
        "--socket=pulseaudio",
        "--env=JAVA_HOME=/app/jre",
        "--filesystem=~/.cache/OpenRSC:create"
    ],
    "modules": [
        {
            "name": "openjdk",
            "buildsystem": "simple",
            "build-commands" : [ "/usr/lib/sdk/openjdk17/install.sh" ]
        },
        {
            "name": "openrsc",
            "buildsystem": "simple",
            "build-commands": [
                "install -D openrsc /app/bin/openrsc",
                "install -D OpenRSC.jar /app/share/OpenRSC.jar",
                "install -Dm644 vet.rsc.OpenRSC.Launcher.png /app/share/icons/hicolor/48x48/apps/vet.rsc.OpenRSC.Launcher.png",
                "install -Dm644 vet.rsc.OpenRSC.Launcher.desktop /app/share/applications/vet.rsc.OpenRSC.Launcher.desktop",
                "install -Dm644 vet.rsc.OpenRSC.Launcher.appdata.xml /app/share/appdata/vet.rsc.OpenRSC.Launcher.appdata.xml"
            ],
            "sources": [
                {
                    "type": "script",
                    "dest-filename": "openrsc",
                    "commands": [
                          "exec $JAVA_HOME/bin/java -jar /app/share/OpenRSC.jar --dir ~/.cache/OpenRSC \"$@\""
                    ]
                },
                {
                    "type": "file",
                    "url": "https://rsc.vet/downloads/OpenRSC.jar",
                    "sha256": "674a5116e0a510d6742a4eaa67476cf2c0cbdd28af957349ae4a397893bd524d"
                },
                {
                    "type": "file",
                    "path": "vet.rsc.OpenRSC.Launcher.png"
                },
                {
                    "type": "file",
                    "path": "vet.rsc.OpenRSC.Launcher.desktop"
                },
                {
                    "type": "file",
                    "path": "vet.rsc.OpenRSC.Launcher.appdata.xml"
                }
            ]
        }
    ]
}
